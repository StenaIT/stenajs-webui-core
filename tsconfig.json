{
  "compilerOptions": {
    "outDir": "lib/",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "src/setupTests.ts", "**/__tests__/**"]
}