{
  "compilerOptions": {
    "outDir": "lib/",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "rootDirs": [
      "src",
      "examples",
      "stories"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "src/setupTests.ts",
    "**/__tests__/**"
  ]
}
